<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/padding_5dp" />
            <solid android:color="@color/red_pressed" />
            <padding android:bottom="@dimen/padding_2dp" android:left="@dimen/padding_30dp" android:right="@dimen/padding_30dp" android:top="@dimen/padding_2dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/padding_5dp" />
            <solid android:color="@color/dismiss" />
            <padding android:bottom="@dimen/padding_2dp" android:left="@dimen/padding_30dp" android:right="@dimen/padding_30dp" android:top="@dimen/padding_2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/padding_5dp" />
            <solid android:color="@color/red" />
            <padding android:bottom="@dimen/padding_2dp" android:left="@dimen/padding_30dp" android:right="@dimen/padding_30dp" android:top="@dimen/padding_2dp" />
        </shape>
    </item>

</selector>

